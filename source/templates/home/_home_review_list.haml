%ol.home_review_list
  - reviews.each_with_index do |review, index|
    %li.home_review_list-item
      %article.home_review_list-review
        .home_review_list-date_wrap
          .home_review_list-date
            = review.date.strftime('%d %b %Y')
        %header.home_review_list-header
          %h3.home_review_list-title
            %a.home_review_list-header_link{ href: "/reviews/#{review.slug}/" }
              = review.title_without_year
        %a.home_review_list-backdrop_wrap{ href: "/reviews/#{review.slug}/" }
          .home_review_list-backdrop{ data: { backdrop: review.backdrop } }
            %img.home_review_list-backdrop_placeholder{ src: review.backdrop_uri }
        .home_review_list-excerpt
          = first_paragraph(grade_to_image_tag(grade: review.grade, options: { class: 'home_review_list-grade', width: '95px', height: '19px' }) + ' ' + review.content)

