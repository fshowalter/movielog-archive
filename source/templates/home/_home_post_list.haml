%ol.home_post_list
  - posts.each_with_index do |post, index|
    %li.home_post_list-item
      %article.home_post_list-post
        .home_post_list-date_wrap
          .home_post_list-date
            = post.date.strftime('%d %b %Y')
        %header.home_post_list-header
          %h3.home_post_list-title
            %a.home_post_list-header_link{ href: href_for_post(post) }
              = post.title_without_year
        %a.home_post_list-backdrop_wrap{ href: href_for_post(post) }
          .home_post_list-backdrop{ data: { backdrop: post.backdrop } }
        .home_post_list-excerpt
          = first_paragraph(grade_to_image_tag(grade: post.grade, options: { class: 'home_post_list-grade' }) + ' ' + post.content)

