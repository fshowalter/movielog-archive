:ruby
  review_slug = lambda do |review|
    grade = grade_to_image_tag(
      grade: review.grade,
      options: { class: 'reviews_list-grade' },
    )

    date = review.date.strftime('%Y-%m-%d')

    "#{grade} #{date}"
  end

%ol.reviews_list#reviews
  - reviews.keys.map { |db_title| Movielog.movies[db_title] }.sort_by(&:sortable_title).each do |movie|
    - review = reviews[movie.title]
    %li.reviews_list-item{ data_for_review(movie: movie, review: review) }
      .reviews_list-title
        %a{ href: href_for_review(review) }
          = review.title
      .reviews_list-slug
        = review_slug.call(review)
