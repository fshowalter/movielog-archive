  venues_with_index = Movielog.venues.each_with_index.each_with_object([]) do |(venue, index), array|
    array << [venue, index]
  end

  release_dates = Movielog.movies.values.map(&:release_date).sort
  oldest_year = release_dates.first.year
  newest_year = release_dates.last.year

.viewings_filters{ data: { filter_controls: true, target: '#viewings' } }
  %h2.viewings_filters-heading Filter and Sort
  .viewings_filters-content
    = text_filter(placeholder: 'Enter all or part of a title', attribute: 'data-title', label: 'Title')
    = range_filter(label: 'Release Year',
                   attribute: 'data-release-date-year',
                   min: oldest_year,
                   max: newest_year)
    = select_filter(label: 'Venue',
                          attribute: 'data-venue',
                          options: venues_with_index)
    = sort_filter(label: 'Order By',
                  attribute: 'viewing-date-desc',
                  target: '#viewings',
                  options: [['Viewing Date (Newest First)', 'viewing-date-desc'],
                            ['Viewing Date (Oldest First)', 'viewing-date-asc'],
                            ['Release Date (Newest First)', 'release-date-desc'],
                            ['Release Date (Oldest First)', 'release-date-asc'],
                            %w(Title sort-title-asc)])
