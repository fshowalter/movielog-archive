:ruby
  credits = []
  credits << 'directed by' if person.direction_credits
  credits << 'with' if person.performance_credits
  credits << 'written by' if person.writing_credits
  credits = credits.to_sentence

%header.reviews_for_person_header
  %h1.reviews_for_person_header-heading
    <span>Reviews of movies #{credits}</span> #{person.first_name} #{person.last_name}
