%header.mast
  .mast-wrap
    %h1.mast-title
      %a.mast-title_link{ href: '/', tabindex: 1 } Frank's Movie Log
    = form_tag 'https://www.google.com/search', method: :get, class: 'mast-search_form js-toggle js-toggle_off' do
      = hidden_field_tag 'q', value: 'site:www.franksmovielog.com'
      .mast-search_input_wrap
        = text_field_tag('q', placeholder: 'What are you looking for?',
                              id: 'mastSearchInput',
                              class: 'mast-search_input',
                              tabindex: 2)
    %button.mast-search_button{ data: { toggle: true }, accessKey: 'S', tabindex: 3 }
      Search